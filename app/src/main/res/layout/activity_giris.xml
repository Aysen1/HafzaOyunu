<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Giris"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="39dp"
        android:padding="10dp"
        android:text="Hafıza Oyununa Hoş Geldiniz!"
        app:layout_constraintBottom_toTopOf="@+id/et_isim"
        app:layout_constraintStart_toStartOf="@+id/et_isim" />

    <EditText
        android:id="@+id/et_isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lütfen isminizi giriniz:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oyuna_basla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="49dp"
        android:text="Oyuna Başla"
        app:layout_constraintStart_toStartOf="@+id/et_isim"
        app:layout_constraintTop_toBottomOf="@+id/et_isim" />

</android.support.constraint.ConstraintLayout>